{% set id = random() %}
{% set live = event.live %}
{% set advance_live_events = true %}

{% include "@PumukitBaseLivePlayer/player.html.twig" %}
<script type="text/javascript">
    {% include "@PumukitBaseLivePlayer/Advance/Sessions/common.js.twig" %}
    if(nextSessionsCount === 0 && nowSessionsCount === 0) {
        {% include "@PumukitBaseLivePlayer/Advance/Sessions/withoutSessions.js.twig" %}
    } else if (nextSessionsCount > 0 && nowSessionsCount === 0) {
        {% include "@PumukitBaseLivePlayer/Advance/Sessions/futureSessions.js.twig" %}
    } else if (nowSessionsCount > 0) {
        {% include "@PumukitBaseLivePlayer/Advance/Sessions/nowSessions.js.twig" %}
        {% if event.isIframeUrl() is same as(false) %}

            {% if generate_hls_url(live) != 0 %}
                {% include "@PumukitBaseLivePlayer/Advance/player.js.twig" %}
            {% else %}
                {% include "@PumukitBaseLivePlayer/Advance/Sessions/noRealSession.js.twig" %}
            {% endif %}

            {% include "@PumukitBaseLivePlayer/Advance/wowzaSuscriber.js.twig" %}

        {% endif %}
    }

</script>